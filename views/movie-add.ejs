<%- include('partials/header') %> 
<%- include('partials/nav') %> 
<div class="container">
  <div>
    <br>
    <h1 class="display-2">Movie Add</h1>
    <br>
  </div>
  <div>
    <form action="/movies/add" method="POST">
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" id="name" name="name" placeholder="e.g: 12 Angry Men"/>
      </div>
      <div class="mb-3">
        <label class="form-label" for="released_year">Released Year</label>
        <input class="form-control" type="text" id="released_year" name="released_year" placeholder="e.g: 1957"/>
      </div>
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-control" type="text" id="rating" name="rating" placeholder="e.g: 1-10"/>
      </div>
      <div class="mb-3">
        <label class="form-label" for="genre">Genre</label>
        <select class="form-select" name="genre" id="genre">
          <option selected>--SELECT--</option>
          <option value="animation">animation</option>
          <option value="comedy">comedy</option>
          <option value="drama">drama</option>
          <option value="horor">horor</option>
          <option value="religious">religious</option>
          <option value="thriller">thriller</option>
        </select>
      </div>
        <br>
        <button class="btn btn-primary" type="submit">Save</button>
        <button class="btn btn-danger"><a href="/movies">Cancel</a></button>
      </div>
    </form>
  </div>
</div>
<%- include('partials/footer') %> 