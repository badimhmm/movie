<%- include('partials/header') %> 
<%- include('partials/nav') %> 
<div class="container">
  <div class="d-inline-flex" style="width: 100%;">
  <div class="col-6">
    <br><br><br>
    <p class="h2 "><%= movie.name%></p>
  </div>
  <div class="col-6 ">
    <br>
    <p class="h2 text-center">Add Cast:</p>
    <br>
    <form action="/movies/<%= movie.id %>/add-moviecasts" method="POST">
      
      <div class="mb-3">
        <div class="mb-3">
          <label class="form-label" for="CastId">Actor:</label>
          <select class="form-select" name="CastId" id="CastId">
            <option>---Select---</option>
            <% data.forEach(el => { %>
            <option value="<%= el.id %>"> <%= el.getFullName() %> </option>
            <% }) %> 
          </select>
        </div>
        
      </div>
      <div class="mb-3">
        <label class="form-label" for="role">Role:</label>
      
        <input class="form-control" type="text" id="role" name="role" placeholder="e.g: Main Actor"/>

      </div>
     
        <br>
        <button class="btn btn-primary" type="submit">Save</button>
        <button class="btn btn-danger"><a href="/casts">Cancel</a></button>
      </div>
    </form>
  </div>
</div>
  <div class="container mt-5">
    <h3>List Cast</h3>
    <table class="table table-hover">
      <thead>
        <th scope="col">Actor</th>
        <th scope="col">Role</th>
      </thead>
      <tbody>
        <% movie.Casts.forEach(el => { %>
          <tr>
              <td><%= el.getFullName() %></td>
              <td><%= el.MovieCast.role %></td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>
<%- include('partials/footer') %> 